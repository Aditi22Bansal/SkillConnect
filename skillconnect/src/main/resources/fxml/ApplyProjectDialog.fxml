<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.Insets?>

<VBox fx:id="root" spacing="15" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.skillconnect.controllers.ApplyProjectDialogController"
      styleClass="dialog-container">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text fx:id="projectTitle" styleClass="dialog-title"/>

    <Text fx:id="projectDescription" styleClass="dialog-description" wrappingWidth="400"/>

    <VBox spacing="10">
        <Label text="Required Skills:" styleClass="section-label"/>
        <FlowPane fx:id="requiredSkillsContainer" hgap="10" vgap="10" styleClass="skills-container"/>
    </VBox>

    <VBox spacing="10">
        <Label text="Your Skills:" styleClass="section-label"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <ComboBox fx:id="skillsComboBox" prefWidth="200"/>
            <JFXButton fx:id="addSkillButton" text="Add Skill" styleClass="button-primary"/>
        </HBox>
        <FlowPane fx:id="selectedSkillsContainer" hgap="10" vgap="10" styleClass="skills-container"/>
    </VBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <JFXButton text="Cancel" onAction="#handleCancel" styleClass="button-secondary"/>
        <JFXButton text="Apply" onAction="#handleApply" styleClass="button-primary"/>
    </HBox>
</VBox>