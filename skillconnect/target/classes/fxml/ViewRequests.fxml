<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import com.jfoenix.controls.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.paint.Color?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.skillconnect.controllers.ViewRequestsController"
      styleClass="requests-container"
      spacing="20">

    <Text text="Volunteer Requests" styleClass="section-title"/>

    <VBox fx:id="requestsContainer"
          spacing="15"
          styleClass="requests-list"/>

    <VBox fx:id="emptyState"
          alignment="CENTER"
          spacing="10"
          visible="false">
        <Text text="No requests yet" styleClass="empty-state-text"/>
    </VBox>
</VBox>